{
  "name": "@gen-dungeon/client-workspace",
  "private": true,
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc -b packages/*",
    "test": "bun run test:torii-views && bun run test:explorer-data && bun run test:proxy && bun run test:renderer && bun run test:app",
    "test:torii-views": "bun run --filter @gen-dungeon/torii-views test",
    "test:explorer-data": "bun run --filter @gen-dungeon/explorer-data test",
    "test:proxy": "bun run --filter @gen-dungeon/explorer-proxy-node test",
    "test:renderer": "bun run --filter @gen-dungeon/explorer-renderer-webgl test",
    "test:app": "bun run --filter @gen-dungeon/explorer-app test",
    "dev:app": "bun run --filter @gen-dungeon/explorer-app dev",
    "test:deterministic-replay": "bun run --filter @gen-dungeon/explorer-data test:deterministic-replay",
    "test:hardening-gate": "bun run scripts/p5-hardening-gate.ts",
    "test:perf-smoke": "bun run --filter @gen-dungeon/explorer-renderer-webgl test:perf && bun run --filter @gen-dungeon/explorer-data test:perf && bun run test:hardening-gate"
  },
  "devDependencies": {
    "@dojoengine/core": "^1.8.8",
    "@dojoengine/sdk": "^1.9.0",
    "@types/node": "^22.13.10",
    "starknet": "^8.9.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
